{{!-- views/books/books-list.hbs --}}

<h1>BOOKS</h1>

{{!-- since we passed allTheBooksFromDB as `books`,
we can iterate over it here with #each--}}

{{#each results}}
  <div>
    <h3>{{title}}</h3>
    <p>By: {{author}}</p> {{!-- additional book property --}}
    <a href="/books/book-details/{{_id}}">See details</a> {{!-- link that points to the details page --}}
    <a href="/books/edit/{{_id}}">Edit</a> {{!-- link to redirect to the edit form for each specific book  --}}
    <form action="/books/delete/{{_id}}" method="POST">
      <button>Delete</button>
    </form>
  </div>
{{/each}}